<div class="row">
    <div class="col-md-12">
        <br />
    <h2>Courses
      <a href="/coursess/add" class="btn btn-success float-right">Add New Course</a>
    </h2>
    <hr />

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th> <!-- New column for remove links -->
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                        <tr>
                            <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                            <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                            <td><a class="btn btn-danger" href="/course/delete/{{this.courseId}}">Remove</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="col-md-12 text-center">
    <strong>{{message}}</strong>
</div>
